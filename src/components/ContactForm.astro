<div class='flex flex-col items-center justify-center w-full mt-8'>
  <!-- Text Section -->
  <div class='text-3xl w-full font-bold mb-2 text-center'>
    Shoot me a message!
  </div>
  <div class='text-lg w-full font-bold mb-4 text-center'>
    Want me to speak at your event? Possibly hire me for a project?
  </div>
</div>
<div class='flex items-center justify-center'>
  <form
    name='contact'
    method='POST'
    data-netlify='true'
    class='p-8 rounded-lg shadow-lg w-full max-w-md'
    onsubmit='return validateForm(event)'>
    <!-- Name -->
    <div class='mb-4'>
      <label
        for='name'
        class='block text-lime-500 font-medium mb-2'
        >Name</label
      >
      <input
        type='text'
        id='name'
        name='name'
        class='w-full p-2 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-lime-500'
        placeholder='Enter your name'
        required
        minlength='3'
      />
    </div>

    <!-- Title -->
    <div class='mb-4'>
      <label
        for='title'
        class='block text-lime-500 font-medium mb-2'
        >Title</label
      >
      <input
        type='text'
        id='title'
        name='title'
        class='w-full p-2 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-lime-500'
        placeholder='Enter a title'
        required
      />
    </div>

    <!-- Email -->
    <div class='mb-4'>
      <label
        for='email'
        class='block text-lime-500 font-medium mb-2'
        >Email</label
      >
      <input
        type='email'
        id='email'
        name='email'
        class='w-full p-2 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-lime-500'
        placeholder='Enter your email'
        required
        pattern='[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$'
      />
    </div>

    <!-- Message -->
    <div class='mb-6'>
      <label
        for='message'
        class='block text-lime-500 font-medium mb-2'
        >Message</label
      >
      <textarea
        id='message'
        name='message'
        rows='4'
        class='w-full p-2 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-lime-500'
        placeholder='Enter your message'
        required
        minlength='10'
      ></textarea>
    </div>

    <!-- Send Button -->
    <button
      type='submit'
      class='w-full bg-lime-500 text-black font-bold py-2 px-4 rounded hover:bg-lime-600 transition duration-300'>
      Send
    </button>
  </form>
</div>

<script>
  function validateForm(event) {
    const form = event.target;
    const email = form.email.value;
    const message = form.message.value;

    // Example custom validation
    if (!email.includes('@')) {
      alert('Please enter a valid email address.');
      return false;
    }

    if (message.length < 10) {
      alert('Message must be at least 10 characters long.');
      return false;
    }

    return true; // Allow form submission
  }
</script>
