<div class='w-full flex items-center justify-center'>
  <form
    name='contact'
    method='POST'
    data-netlify='true'
    class='bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-md'>
    <!-- Name -->
    <div class='mb-4'>
      <label
        for='name'
        class='block text-lime-500 font-medium mb-2'
        >Name</label
      >
      <input
        type='text'
        id='name'
        name='name'
        class='w-full p-2 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-lime-500'
        placeholder='Enter your name'
        required
      />
    </div>

    <!-- Title -->
    <div class='mb-4'>
      <label
        for='title'
        class='block text-lime-500 font-medium mb-2'
        >Title</label
      >
      <input
        type='text'
        id='title'
        name='title'
        class='w-full p-2 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-lime-500'
        placeholder='Enter a title'
        required
      />
    </div>

    <!-- Email -->
    <div class='mb-4'>
      <label
        for='email'
        class='block text-lime-500 font-medium mb-2'
        >Email</label
      >
      <input
        type='email'
        id='email'
        name='email'
        class='w-full p-2 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-lime-500'
        placeholder='Enter your email'
        required
      />
    </div>

    <!-- Message -->
    <div class='mb-6'>
      <label
        for='message'
        class='block text-lime-500 font-medium mb-2'
        >Message</label
      >
      <textarea
        id='message'
        name='message'
        rows='4'
        class='w-full p-2 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-lime-500'
        placeholder='Enter your message'
        required
      ></textarea>
    </div>

    <!-- Send Button -->
    <button
      type='submit'
      class='w-full bg-lime-500 text-black font-bold py-2 px-4 rounded hover:bg-lime-600 transition duration-300'>
      Send
    </button>
  </form>
</div>
